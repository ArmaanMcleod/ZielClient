<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">


    <ImageView
        android:id="@+id/onboarding_image3"
        android:layout_width="178dp"
        android:layout_height="167dp"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="69dp"
        app:layout_constraintBottom_toTopOf="@+id/onboarding_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/two_users" />

    <TextView
        android:id="@+id/onboarding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="36dp"
        android:text="Contact"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/onboarding_description"
        app:layout_constraintStart_toStartOf="@+id/onboarding_image3"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_image3" />

    <TextView
        android:id="@+id/onboarding_description"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/signup3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_title"
        android:text="Virtually contact carer by messaging, calling or video calling to receive immediate help to help reach you destination" />

    <Button
        android:id="@+id/signup3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="94dp"
        android:background="@drawable/whitebutton"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_description" />
</android.support.constraint.ConstraintLayout>