<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.channel.VoiceActivity">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/call_action_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginBottom="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_call_white_24dp"
        android:visibility="invisible"
        android:layout_gravity="bottom|center"
        app:backgroundTint="#58b303"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:useCompatPadding="true" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mute_action_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="30dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_mic_white_24dp"
        android:visibility="invisible"
        app:backgroundTint="#10b7ff"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:useCompatPadding="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="50dp"
        android:text="Mute"
        android:textAlignment="center"
        android:textColor="#949494"
        app:layout_anchor="@+id/mute_action_fab"
        app:layout_anchorGravity="bottom|center_horizontal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/hangup_action_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_call_end_white_24dp"
        android:visibility="invisible"
        app:backgroundTint="#d91507"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:useCompatPadding="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="40dp"
        android:text="Hang up"
        android:textColor="#949494"
        app:layout_anchor="@+id/hangup_action_fab"
        app:layout_anchorGravity="bottom|center_horizontal" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="60dp"
        app:layout_anchor="@+id/chronometer"
        android:layout_gravity="top|center"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_calling_grey_250"
        app:layout_anchorGravity="top|center_horizontal"/>
</android.support.design.widget.CoordinatorLayout>

